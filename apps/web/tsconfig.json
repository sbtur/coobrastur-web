{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@workspace/ui/*": ["../../packages/ui/src/*"],
      "@components/*": ["./shared/components/*"],
      "@providers": ["./shared/providers"],
      "@hooks/*": ["./shared/hooks/*"],
      "@utils/*": ["./shared/utils/*"],
      "@app/*": ["./app/*"],
      "@images/*": ["./public/images/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
